<style>
  p{margin:0;padding:0;}
  *{margin: 0; padding: 0; list-style: none;
    font-family: "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif;
  }
</style>

<%= link_to '添加商品', new_item_url ,:class=>"btn btn-primary"%>
<br><br>
<% session[:page]='items' %>
<p class="order-head-detail ">所有商品</p>
<br>
<div class="row">
  <% @items.each do |item| %>
    <div class="col col-xs-12 col-sm-12 col-md-4 col-lg-4">
      <div class="card" style="margin-left: 3%;margin-right: 3%;margin-bottom: 3%;">
        <%= image_tag item.image, :class=>"card-img-left",height: 300 if item.image.attached? %>
        <div class="card-body">
          <div>
            <p class="card-text car-color1 fl "><%= link_to item.name, item_path(item)%> </p>
            <p class="card-price car-price-num fr"><span style="color:red"><%= item.price %></span> 象币</p>
          </div>
          <p class="card-title car-color2"><%= item.description %></p>
          <%= link_to '编辑商品', edit_item_url(item), :class=>"btn btn-primary" %>
          <%= link_to '删除商品', item, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-primary" %>
        </div>
      </div>
    </div>

  <% end %>


</div>