<div class="row">
    <div class="col" style="margin-left: 10%; margin-right: 10%">
        <h1>添加商品</h1>
        <%= form_with(model: @item, url: items_path, local: true) do |form| %>
            <div class="form-group">
                <%= form.label :name, '名称' %>
                <%= form.text_field :name, :class=>"form-control" %>
            </div>
            
            <div class="form-group">
                <%= form.label :stock, '数量' %>
                <%= form.telephone_field :stock, :class=>"form-control" %>
            </div>
            
            <div class="form-group">
                <%= form.label :price, '价格' %>
                <%= form.text_field :price, :class=>"form-control" %>
            </div>
            
            <div class="form-group">
                <%= form.label :description, '商品详情' %>
                <%= form.text_area :description, :class=>"form-control" %>
            </div>

            <div class="form-group">
                <%= form.file_field :image, :class=>"form-control-file" %>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">添加商品</button>
            </div>
        <% end %>
    </div>
</div>