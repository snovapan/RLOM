<!DOCTYPE html>
<html>
  <head>
    <title>RLOM</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <% if flash.any? %>
      <%= flash[:error] %>
      <%= flash[:success] %>
    <% end %>
    
    <%= yield %>
  </body>
</html>
