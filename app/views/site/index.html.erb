<h1>所有商品</h1>
<div class="row">
  <% @items.each do |item| %>
      <div class="col col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <div class="card" style="margin-left: 3%;margin-bottom: 3%;">
          <%= image_tag item.image, :class=>"card-img-left",height: 300 if item.image.attached? %>
          <div class="card-body">
            <h5 class="card-price"><span style="color:red"><%= item.price %></span> 象币</h5>
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text"><%= item.description %></p>
            <div>
              <span style="float: left">
                <%= link_to "购买", new_order_path(:item_id=>item, :quantity=>1), :class=>"btn btn-primary" %>
              </span>
              <span style="float: right;">库存<%= item.stock %>件</span>
            </div>
          </div>
        </div>
      </div>

  <% end %>
</div>

