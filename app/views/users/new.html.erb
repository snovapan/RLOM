<h1>创建用户</h1>
<%= form_with model: @user, url: new_user_path do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= @user.errors.messages[:name] %>
    </p>
    <p>
        <%= f.label :phone %>
        <%= f.telephone_field :phone %>
        <%= @user.errors.messages[:phone] %>
    </p>
    <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= @user.errors.messages[:password] %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
