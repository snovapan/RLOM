<%= form_with model: @user url: user_path do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= @user.errors.messages[:name] %>
    </p>
    <p>
        <%= f.label :phone %>
        <%= f.telephone_field :phone %>
        <%= @user.errors.messages[:phone] %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
